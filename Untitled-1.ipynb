#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    char course[50];
    int year;
};

void addStudent();
void viewStudents();
void searchStudent();
void updateStudent();
void deleteStudent();

int main() {
    int choice;

    while (1) {
        printf("\n========= COLLEGE MANAGEMENT SYSTEM =========\n");
        printf("1. Add Student\n");
        printf("2. View All Students\n");
        printf("3. Search Student\n");
        printf("4. Update Student\n");
        printf("5. Delete Student\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: addStudent(); break;
            case 2: viewStudents(); break;
            case 3: searchStudent(); break;
            case 4: updateStudent(); break;
            case 5: deleteStudent(); break;
            case 6: exit(0);
            default: printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}

void addStudent() {
    struct Student s;
    FILE *fp = fopen("students.txt", "a");

    printf("Enter Roll Number: ");
    scanf("%d", &s.roll);
    printf("Enter Name: ");
    scanf(" %[^\n]", s.name);
    printf("Enter Course: ");
    scanf(" %[^\n]", s.course);
    printf("Enter Year: ");
    scanf("%d", &s.year);

    fprintf(fp, "%d %s %s %d\n", s.roll, s.name, s.course, s.year);
    fclose(fp);

    printf("Student Added Successfully!\n");
}

void viewStudents() {
    struct Student s;
    FILE *fp = fopen("students.txt", "r");

    printf("\n--- Student Records ---\n");

    if (fp == NULL) {
        printf("No record found!\n");
        return;
    }

    while (fscanf(fp, "%d %s %s %d", &s.roll, s.name, s.course, &s.year) != EOF) {
        printf("Roll: %d | Name: %s | Course: %s | Year: %d\n",
               s.roll, s.name, s.course, s.year);
    }

    fclose(fp);
}

void searchStudent() {
    struct Student s;
    int roll, found = 0;
    FILE *fp = fopen("students.txt", "r");

    printf("Enter Roll Number to Search: ");
    scanf("%d", &roll);

    while (fscanf(fp, "%d %s %s %d", &s.roll, s.name, s.course, &s.year) != EOF) {
        if (s.roll == roll) {
            printf("\nRecord Found:\n");
            printf("Roll: %d\nName: %s\nCourse: %s\nYear: %d\n",
                   s.roll, s.name, s.course, s.year);
            found = 1;
            break;
        }
    }

    fclose(fp);

    if (!found)
        printf("Student not found!\n");
}

void updateStudent() {
    struct Student s;
    int roll, found = 0;
    FILE *fp = fopen("students.txt", "r");
    FILE *temp = fopen("temp.txt", "w");

    printf("Enter Roll Number to Update: ");
    scanf("%d", &roll);

    while (fscanf(fp, "%d %s %s %d", &s.roll, s.name, s.course, &s.year) != EOF) {
        if (s.roll == roll) {
            found = 1;
            printf("Enter New Name: ");
            scanf(" %[^\n]", s.name);
            printf("Enter New Course: ");
            scanf(" %[^\n]", s.course);
            printf("Enter New Year: ");
            scanf("%d", &s.year);
        }
        fprintf(temp, "%d %s %s %d\n", s.roll, s.name, s.course, s.year);
    }

    fclose(fp);
    fclose(temp);

    remove("students.txt");
    rename("temp.txt", "students.txt");

    if (found)
        printf("Record Updated Successfully!\n");
    else
        printf("Student not found!\n");
}

void deleteStudent() {
    struct Student s;
    int roll, found = 0;
    FILE *fp = fopen("students.txt", "r");
    FILE *temp = fopen("temp.txt", "w");

    printf("Enter Roll Number to Delete: ");
    scanf("%d", &roll);

    while (fscanf(fp, "%d %s %s %d", &s.roll, s.name, s.course, &s.year) != EOF) {
        if (s.roll != roll)
            fprintf(temp, "%d %s %s %d\n", s.roll, s.name, s.course, s.year);
        else
            found = 1;
    }

    fclose(fp);
    fclose(temp);

    remove("students.txt");
    rename("temp.txt", "students.txt");

    if (found)
        printf("Record Deleted Successfully!\n");
    else
        printf("Student not found!\n");
}
